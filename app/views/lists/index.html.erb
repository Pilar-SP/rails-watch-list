<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <%= image_tag("popcorn.png", class: "navbar--img")%>
  <div class="d-flex ">
    <%# <p>My lists</p> %>
    <button type="button" class="btn btn-outline-dark rounded-2 ">My lists</button>
    <button type="button" class="btn btn-outline-dark rounded-2 mx-2">New list</button>

  </div>

</div>

<div class="banner">
  <h1>Save any kind of movies</h1>
  <h5>For those days of Netflix and chill</h5>
</div>

<div class=container--btn>
  <%= link_to new_list_path(@list) do %>
    <button type="button" class="btn btn-outline-dark rounded-2 mx-4">Create a movie list</button>
  <% end %>

  <h2>My lists</h2>
</div>


<div class="list-card-container">
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
      <div class="list-card">
        <h3><%= list.name %></h3>
      </div>
    <% end %>
  <% end %>
</div>
