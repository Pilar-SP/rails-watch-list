<div class="banner" style="background-image: url(<%= image_url("cinema.jpg") %>);">

  <h1 style="color: white"><span data-controller="typed-js"></span></h1>
</div>

<%= link_to "Create a movie list", new_list_path(@list), class: "btn btn-outline-dark rounded-2 float-end my-4 me-4" %>


<h2 class="text-center my-5 mx-5">🎬 My lists</h2>

<div class="list-card-container my-5">
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>


      <div class="list-card" data-controller="aos" data-aos="zoom-out-up" style="background-image: url(
        <% if list.photo.key.present? %>
          <%= cl_image_path list.photo.key %>
        <% else %>
          <%= image_url("card.jpg") %>
        <% end %>
        );">
        <h3><%= list.name %></h3>
      </div>


    <% end %>
  <% end %>
</div>
